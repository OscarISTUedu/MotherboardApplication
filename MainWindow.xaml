<Window x:Class="ЭВМ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ЭВМ"
        mc:Ignorable="d"
        Title="PC Pocket Diagnostics" Height="800" Width="1200">
    <Grid x:Name="MainRoot" Background="White">
        <Button x:Name="Begin"  Content="Начать" HorizontalAlignment="Center" Height="85" VerticalAlignment="Top" Width="300" Click="Button_Click" Margin="0,179,0,0" FontSize="36"/>
        <Button x:Name="About"  Content="О приложении" HorizontalAlignment="Center" Height="85" Margin="0,295,0,0" VerticalAlignment="Top" Width="300"  Click="Button_Click" FontSize="36"/>

        <ListBox x:Name="Menu"  Visibility="Hidden" HorizontalAlignment="Center" Height="600" VerticalAlignment="Top" Width="514" Margin="0,40,0,0" HorizontalContentAlignment="Center">
            <Button Background="AntiqueWhite" Content="Поломка №1" Height="30" Width="484"  Click="Menu_Click"/>
            <Button Background="AntiqueWhite" Content="Поломка №2" Height="30" Width="484" Click="Menu_Click"/>
        </ListBox>
        <Grid x:Name="PlayGround">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
          
            <Image x:Name="MotherBoardImage" Grid.Column="0" Source="/MotherBoard.png" Stretch="Fill" Visibility="Hidden"></Image>
            <TabControl  Name="ToolsPages" Grid.Column="1" Visibility="Hidden">
                <TabItem x:Name="Oscilloscope" Header="Осцилограф"  MouseLeftButtonUp="Tab_Click">
                    
                </TabItem>

                <TabItem x:Name="Multimeter" Header="Мультиметр" MouseLeftButtonUp="Tab_Click">
                    <TabItem.Content>
                        <StackPanel>
                            <Grid x:Name="Inside" Height="657" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.6*"></RowDefinition>
                                    <RowDefinition Height="0.3*"></RowDefinition>
                                    <RowDefinition Height="0.6*"></RowDefinition>
                                    <RowDefinition Height="0.3*"></RowDefinition>
                                    <RowDefinition Height="0.6*"></RowDefinition>
                                    <RowDefinition Height="0.3*"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition Height="0.2*"></RowDefinition>
                                </Grid.RowDefinitions>
                            <CheckBox Grid.Row="7" Grid.Column="0" Height="30" Content="Плюс" HorizontalAlignment="Center"></CheckBox>
                            <CheckBox Grid.Row="7" Grid.Column="1" Height="30" Content="Минус" HorizontalAlignment="Center"></CheckBox>
                                <Grid x:Name="NumbersVoltage"  Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center" Grid.ColumnSpan="2" VerticalAlignment="Center" >
                                    <StackPanel  Orientation="Horizontal" Margin="2">
                                        <TextBlock Opacity="0.6" Foreground="Red" FontSize="39" Text="{Binding Min, FallbackValue=0, StringFormat=00}" FontFamily="DSEG7 Classic Mini" ></TextBlock>
                                        <TextBlock Opacity="0.6" Foreground="Red" FontSize="39" FontFamily="DSEG7 Classic Mini">,</TextBlock>
                                        <TextBlock Opacity="0.6" Foreground="Red" FontSize="39" Text="{Binding Sec, FallbackValue=00, StringFormat=00}" FontFamily="DSEG7 Classic Mini" />
                                    </StackPanel>
                                </Grid>
                                <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" FontSize="16" BorderThickness="0,0,0,0" > Напряжение(В)</TextBox>
                                <Grid x:Name="NumbersAmpers" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" Grid.ColumnSpan="2" VerticalAlignment="Center">
                                    <StackPanel  Orientation="Horizontal" Margin="2">
                                        <TextBlock Opacity="0.6" Foreground="Red" FontSize="39" Text="{Binding Min, FallbackValue=0, StringFormat=00}" FontFamily="DSEG7 Classic Mini" ></TextBlock>
                                        <TextBlock Opacity="0.6" Foreground="Red" FontSize="39" FontFamily="DSEG7 Classic Mini">,</TextBlock>
                                        <TextBlock Opacity="0.6" Foreground="Red" FontSize="39" Text="{Binding Sec, FallbackValue=00, StringFormat=00}" FontFamily="DSEG7 Classic Mini" ></TextBlock>
                                    </StackPanel>
                                </Grid>
                                <TextBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" FontSize="16" BorderThickness="0,0,0,0" > Сила Тока(А)</TextBox>
                                <Grid x:Name="NumberResistance" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Center" Grid.ColumnSpan="2" VerticalAlignment="Center">
                                    <StackPanel  Orientation="Horizontal" Margin="2">
                                        <TextBlock Opacity="0.6" Foreground="Red" FontSize="39" Text="{Binding Min, FallbackValue=0, StringFormat=00}" FontFamily="DSEG7 Classic Mini" ></TextBlock>
                                        <TextBlock Opacity="0.6" Foreground="Red" FontSize="39" FontFamily="DSEG7 Classic Mini">,</TextBlock>
                                        <TextBlock Opacity="0.6" Foreground="Red" FontSize="39" Text="{Binding Sec, FallbackValue=00, StringFormat=00}" FontFamily="DSEG7 Classic Mini" ></TextBlock>
                                    </StackPanel>
                                </Grid>
                                <TextBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" HorizontalContentAlignment="Center" FontSize="16" BorderThickness="0,0,0,0" > Сопротивление(Ом)</TextBox>
                                <Rectangle Grid.Column="0" Grid.Row="6" StrokeThickness="2">
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="/MultimimeterRedPin.png"/>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle Grid.Column="1" Grid.Row="6">
                                    <Rectangle.Fill>
                                        <ImageBrush ImageSource="/MultimimeterPinBlack.png"/>
                                    </Rectangle.Fill>

                                </Rectangle>
                            </Grid>
                        </StackPanel>
                    </TabItem.Content>
                </TabItem>

                <TabItem x:Name="Totals"  Header="Выводы" MouseLeftButtonUp="Tab_Click"></TabItem>
            </TabControl>
            
            <Grid x:Name="GND" HorizontalAlignment="Left" Height="327" VerticalAlignment="Top" Width="295" Margin="1,1,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="1.86*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.67*"></RowDefinition>
                    <RowDefinition Height="3*"></RowDefinition>
                    <RowDefinition Height="0.63*"></RowDefinition>
                </Grid.RowDefinitions>
                <Rectangle x:Name="gnd1" Fill="AliceBlue" Grid.Column="0" Grid.Row="0" StrokeThickness="0" Opacity="0"></Rectangle>
                <Rectangle x:Name="gnd2" Fill="AliceBlue" Grid.Column="1" Grid.Row="0" StrokeThickness="0" Opacity="0"></Rectangle>
                <Rectangle x:Name="gnd3" Fill="AliceBlue" Grid.Column="2" Grid.Row="0" StrokeThickness="0" Opacity="0"></Rectangle>
                <Rectangle x:Name="gnd4" Fill="AliceBlue" Grid.Column="0" Grid.Row="1" StrokeThickness="0" Opacity="0"></Rectangle>
                <Rectangle x:Name="gnd5" Fill="AliceBlue" Grid.Column="0" Grid.Row="2" StrokeThickness="0" Opacity="0"></Rectangle>
                <Rectangle x:Name="gnd6" Fill="AliceBlue" Grid.Column="1" Grid.Row="1" StrokeThickness="0" Opacity="0"></Rectangle>
                </Grid>
        </Grid>

    </Grid>
</Window>
